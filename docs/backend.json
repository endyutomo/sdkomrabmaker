
{
  "entities": {
    "ItemCatalog": {
      "title": "Katalog Item",
      "description": "Koleksi item pekerjaan yang pernah dibuat untuk referensi di masa depan.",
      "type": "object",
      "properties": {
        "name": { "type": "string", "description": "Nama item atau deskripsi pekerjaan" },
        "unit": { "type": "string", "description": "Satuan item" },
        "unitPrice": { "type": "number", "description": "Harga modal terakhir" },
        "type": { "type": "string", "enum": ["perangkat", "jasa"] },
        "vendorName": { "type": "string", "description": "Nama vendor terakhir" },
        "lastUsed": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "unitPrice", "type"]
    },
    "Project": {
      "title": "Proyek RAB",
      "description": "Dokumen RAB yang disimpan oleh pengguna.",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "clientName": { "type": "string" },
        "categories": { "type": "array" },
        "createdAt": { "type": "string", "format": "date-time" }
      }
    }
  },
  "auth": {
    "providers": ["google.com"]
  },
  "firestore": {
    "/item_catalog/{itemId}": {
      "schema": "#/entities/ItemCatalog",
      "description": "Data historis item untuk saran otomatis."
    },
    "/projects/{projectId}": {
      "schema": "#/entities/Project",
      "description": "Penyimpanan dokumen proyek RAB."
    }
  }
}
